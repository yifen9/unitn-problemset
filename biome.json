{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/styles/app.css"],
			"linter": {
				"rules": {
					"suspicious": { "noUnknownAtRules": "off" },
					"correctness": { "noUnknownProperty": "off" }
				}
			}
		},
		{
			"includes": ["src/elm.d.ts"],
			"linter": {
				"rules": {
					"suspicious": { "noExplicitAny": "off" }
				}
			}
		}
	]
}
